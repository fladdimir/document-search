{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch firefox localhost",
            "url": "http://localhost:8085/",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "http://localhost:8085",
                    "path": "${workspaceFolder}/be/upload-service/src/main/resources/META-INF/resources"
                }
            ]
        },
        {
            "type": "java",
            "name": "launch java current file",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "attach java",
            "request": "attach",
            "hostName": "localhost",
            "port": 5005
        }
    ]
}